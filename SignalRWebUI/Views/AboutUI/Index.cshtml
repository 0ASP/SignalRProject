@model List<SignalR.DtoLayer.AboutDto.ResultAboutDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}


@foreach (var item in Model)
{
    <section style="margin: 3%;" class="about_section layout_padding">
        <div class="container">
            <div class="row">
                <div class="">
                    <div class="img-box">
                        <img src="@item.ImageUrl" alt="">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="detail-box">
                        <div class="heading_container">
                            <h2>
                                @item.Title
                            </h2>
                        </div>
                        <p>
                            @item.Description
                        </p>
                        <a href="">
                            Daha Fazlasını Görün
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
}